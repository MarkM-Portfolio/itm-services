{
  "name": "itm-services",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/connections/itm-services.git"
  },
  "main": "server.js",
  "scripts": {
    "test": "npm run stop:test && npm run test:unit && npm run check:lint && npm run build && npm run start:test && sleep 10 && npm run test:api && npm run stop:test",
    "postinstall": "npm run cldr:copy",
    "test:unit": "cross-env TEST_SUITE=unit babel-node ./node_modules/istanbul/lib/cli.js --config=tests/istanbul.yml cover tests/jasmine-runner.js && istanbul --config=tests/istanbul.yml report cobertura",
    "test:unit:q": "cross-env TEST_SUITE=unit babel-node tests/jasmine-runner.js",
    "test:unit:d": "cross-env TEST_SUITE=unit babel-node tests/jasmine-runner.js debug",
    "test:api": "cross-env TEST_SUITE=api babel-node tests/jasmine-runner.js",
    "test:governor": "cross-env TEST_SUITE=governor babel-node tests/jasmine-runner.js",
    "check:lint": "eslint --ignore-pattern tests/reports --ext .js src/ tests/",
    "check:lint:fix": "eslint --fix --ignore-pattern tests/reports --ext .js src/ tests/ | tee tests/reports/lint_report.txt",
    "start": "echo \"Error: no script for start production\" && exit 1",
    "start:test": "cross-env NODE_ENV=development REDIS_SECRET=123 pm2 start lib/server.js --name itm-services --log ./tests/reports/pm2.log --log-date-format LLL",
    "start:dev": "cross-env NODE_ENV=development REDIS_SECRET=123 nodemon src/server.js --exec babel-node",
    "start:dev:d": "cross-env NODE_ENV=development nodemon src/server.js --exec babel-node debug",
    "stop": "pkill node",
    "stop:test": "pm2 kill",
    "cldr:copy": "cp -f ./deployment/cldr/cldr_29.0.2_connections_extended.json ./node_modules/strong-globalize/cldr",
    "build": "rimraf ./lib/ && cross-env BABEL_ENV=commonjs babel ./src --out-dir ./lib --copy-files",
    "build:tests": "rimraf ./lib-tests/ && cross-env BABEL_ENV=commonjs babel ./tests --out-dir ./lib-tests --copy-files"
  },
  "license": "ISC",
